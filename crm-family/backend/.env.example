# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=crm_family
DB_USER=crm_user
DB_PASSWORD=crm_password_secure

# Server
PORT=3001
NODE_ENV=development

# CORS
CORS_ORIGIN=http://localhost:3000
# Email (SMTP)
# Configure com suas credenciais de email
# Para Gmail, use a senha de app (n√£o a senha da conta)
SMTP_HOST=smtp.gmail.com
